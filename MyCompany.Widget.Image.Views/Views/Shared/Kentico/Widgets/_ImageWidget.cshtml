@using Kentico.PageBuilder.Web.Mvc

@model MyCompany.Widget.Image.Models.ImageWidgetViewModel
@{ 
    var imageUrl = string.IsNullOrWhiteSpace(Model.ImageUrl) ? Model.PlaceholderUrl : Model.ImageUrl;
}

<div>
    <img src="@imageUrl" />
    @if (Context.Kentico().PageBuilder().EditMode)
    {
        Html.RenderPartial("~/Views/Shared/Kentico/InlineEditors/_ImageUrl.cshtml", Model);
    }
</div>
